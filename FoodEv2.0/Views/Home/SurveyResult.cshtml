@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

<!doctype html>
<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>Restaurantly Bootstrap Template - Index</title>
    <meta content="" name="description">
    <meta content="" name="keywords">
    <!-- Favicons -->
    <link href="~/Content/img/favicon.png" rel="icon">
    <link href="~/Content/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Playfair+Display:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500;1,600;1,700|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/Content/vendor/animate.css/animate.min.css" rel="stylesheet" />
    <link href="~/Content/vendor/aos/aos.css" rel="stylesheet">
    <link href="~/Content/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/Content/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/Content/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="~/Content/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

    <!-- Template Main CSS File -->
    <link href="~/Content/css/style.css" rel="stylesheet">
</head>

<html>
<body>
    <main id="main">

        <!-- ======= Top Bar Section ======= -->

        <section class="breadcrumbs">
            <div class="container">

                <div class="d-flex justify-content-between align-items-center">
                    <h2>Survey</h2>
                    <ol>
                        <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                    </ol>
                </div>

            </div>
        </section>

        <!-- ======= End Top Bar Section ======= -->

        <!-- ======= Result Section ======= -->
        <section id="about" class="about">
            <div class="container" data-aos="fade-up">

                <div class="row">

                    @if (HttpContextAccessor.HttpContext.Session.GetInt32("uAuth") == null || HttpContextAccessor.HttpContext.Session.GetInt32("uAuth") == 3)
                    {
                        <p style="color:#ff0033">Please Register or Login to access this feature.</p>
                    }
                    else if (ViewData["uScore"] == null || ViewData["aScore"] == null)
                    {
                        <div class="col-lg-6 pt-4 pt-lg-0 order-2 order-lg-1 content">
                            <h3 style="font-weight: 600; font-size: 26px; color: #cda45e;">Survey Incomplete</h3>
                            <h3 style="font-size:20px;margin-bottom:20px">
                                In order to see your score and the average score of all participants you must first complete the survey
                                which can be accessed through the navigation bar the top of the screen or on the homepage.
                            </h3>
                        </div>
                    }
                    else
                    {
                        <div class="col-lg-6 order-1 order-lg-2" data-aos="zoom-in" data-aos-delay="100">
                            <div class="about-img">
                                <img src="~/img/ZeroWaste.jpg" />
                            </div>
                        </div>
                        <div class="col-lg-6 pt-4 pt-lg-0 order-2 order-lg-1 content">
                            <h3 style="font-weight: 600; font-size: 26px; color: #cda45e;">Your Score:</h3>
                            <p style="font-size: 26px; font-weight: 700; margin-bottom: 15px;">
                                @ViewData["uScore"] / 100
                            </p>
                            <h3 style="font-weight: 600; font-size: 26px; color: #cda45e;">
                                Average Score of all participants:
                            </h3>
                            <p style="font-size: 26px; font-weight: 700; margin-bottom: 15px;">
                                @ViewData["aScore"] / 100
                            </p>
                            <h3 style="font-size:20px;margin-bottom:20px">If your score is above average compared to other restaurant owners consider checking out our tips page where we provide knowledge on how to reduce food wastage!</h3>
                            <a asp-area="" asp-controller="Home" asp-action="Tips" class="btnstyler1">Tips</a>
                        </div>
                    }

                </div>

            </div>
        </section><!-- End Result Section -->

    </main>

    <div id="preloader"></div>
    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>
    <!-- Vendor JS Files -->
    <script src="~/Content/vendor/aos/aos.js"></script>
    <script src="~/Content/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="~/Content/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="~/Content/vendor/php-email-form/validate.js"></script>
    <script src="~/Content/vendor/swiper/swiper-bundle.min.js"></script>

    <!-- Template Main JS File -->
    <script src="~/Content/js/main.js"></script>
</body>
</html>
