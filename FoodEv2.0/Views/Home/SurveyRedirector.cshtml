@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

<!doctype html>
<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>Restaurantly Bootstrap Template - Index</title>
    <meta content="" name="description">
    <meta content="" name="keywords">
    <!-- Favicons -->
    <link href="~/Content/img/favicon.png" rel="icon">
    <link href="~/Content/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Playfair+Display:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500;1,600;1,700|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/Content/vendor/animate.css/animate.min.css" rel="stylesheet" />
    <link href="~/Content/vendor/aos/aos.css" rel="stylesheet">
    <link href="~/Content/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/Content/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/Content/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="~/Content/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

    <!-- Template Main CSS File -->
    <link href="~/Content/css/style.css" rel="stylesheet">
</head>

<html>
<body>
    <main id="main">

        <!-- ======= Top Bar Section ======= -->

        <section class="breadcrumbs">
            <div class="container">

                <div class="d-flex justify-content-between align-items-center">
                    <h2>Survey</h2>
                    <ol>
                        <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                    </ol>
                </div>

            </div>
        </section>
        
        <!-- ======= End Top Bar Section ======= -->

        <!-- ======= User Agreement Section ======= -->
        <section id="about" class="about">
            <div class="container" data-aos="fade-up">

                <div class="row">
                    <div class="col-lg-6 order-1 order-lg-2" data-aos="zoom-in" data-aos-delay="100">
                        <div class="about-img">
                            <img src="~/img/ZeroWaste.jpg" />
                        </div>
                    </div>
                    <div class="col-lg-6 pt-4 pt-lg-0 order-2 order-lg-1 content">
                        <h3>User Agreement.</h3>
                        <p class="fst-italic">
                            By continuing with the survey you agree to the statements made below.
                        </p>
                        <ul>
                            <li><i class="bi bi-check-circle"></i> I swear to answer the questions honestly.</li>
                            <li><i class="bi bi-check-circle"></i> I agree to the privacy policies.</li>
                            <li><i class="bi bi-check-circle"></i> I agree with the terms and conditions.</li>
                        </ul>
                        <p>
                            10 survey questions will be randomly selected from a pool of questions so each person will receive different questions. After completing and submiting your answers you will be
                            graded a score and the average score of all participants of this survey will be shown for you to gauge the food waste rates of your business compared to other businesses.
                        </p>
                        @if (HttpContextAccessor.HttpContext.Session.GetInt32("uAuth") == null || HttpContextAccessor.HttpContext.Session.GetInt32("uAuth") == 3)
                        {
                            <p style="color:#ff0033">Please Register or Login to access this feature.</p>
                        }
                        else
                        {
                            <a asp-area="" asp-controller="Home" asp-action="Survey" class="btn-menu animated fadeInUp scrollto">Continue</a>
                        }

                    </div>
                    <div class="errMsg"></div>
                </div>

            </div>
        </section><!-- End User Agreement Section -->

    </main>

    <div id="preloader"></div>
    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>
    <!-- Vendor JS Files -->
    <script src="~/Content/vendor/aos/aos.js"></script>
    <script src="~/Content/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="~/Content/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="~/Content/vendor/php-email-form/validate.js"></script>
    <script src="~/Content/vendor/swiper/swiper-bundle.min.js"></script>

    <!-- Template Main JS File -->
    <script src="~/Content/js/main.js"></script>
</body>
</html>

<script>
    window.onload = function () {
        var getStatus = '@ViewData["sSubFail"]';
        if (getStatus == "fail") {
            document.getElementById("errMsg").innerHTML = "Unexpected Error when Submitting Survey. Sorry for the inconvenience.";
            document.getElementById("errMsg").style.color = "#ff0033";
        }
    };
</script>
