            valid = true;
        }


        function validator() {
            var valid = true;
            for (var i = 1; i <= 10; i++) {
                /*var validity = document.querySelector('input[name="Answer"]:checked');*/
                var validity = document.querySelector('input[name=Answer' + i + ']:checked');
                if (validity == null) {
                    document.getElementById("errMsg").innerHTML = "There are questions unanswered please go back and recheck your questions.";
                    valid = false;
                }
            }
            if (valid == true) {
                document.getElementById("surveyform").submit();
            } else {
                valid = true;
            }
        }

        window.onload = function () {
            var getstatus = '@ViewData["sQuestionsErr"]';
            if (getStatus == "error") {
                document.getElementById("StatMsg").innerHTML = "Unexpected Error occured please try again."
                document.getElementById("StatMsg").style.color = "#ff0033";
            }
        }
    </script>

</body>
</html>


