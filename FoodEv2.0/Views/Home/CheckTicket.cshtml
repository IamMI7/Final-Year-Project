@model SupportTicketViewModel
@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>Restaurantly Bootstrap Template - Index</title>
    <meta content="" name="description">
    <meta content="" name="keywords">
    <!-- Favicons -->
    <link href="~/Content/img/favicon.png" rel="icon">
    <link href="~/Content/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Playfair+Display:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500;1,600;1,700|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/Content/vendor/animate.css/animate.min.css" rel="stylesheet" />
    <link href="~/Content/vendor/aos/aos.css" rel="stylesheet">
    <link href="~/Content/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/Content/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/Content/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="~/Content/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

    <!-- Template Main CSS File -->
    <link href="~/Content/css/style.css" rel="stylesheet">

    
</head>
<body>
    <main id="main">

        <!-- ======= Top Bar Section ======= -->

        <section class="breadcrumbs">
            <div class="container">

                <div class="d-flex justify-content-between align-items-center">
                    <h2>Support Tickets</h2>
                    <ol>
                        <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                    </ol>
                </div>
            </div>
        </section>
    </main>

    <!-- ======= End Top Bar Section ======= -->

    <!-- ======= Check Ticket Section ======= -->
    <section id="why-us" class="why-us">
        <div class="container" data-aos="fade-up">

            <div class="section-title">
                <h2>Close support tickets once solved</h2>
                <p>Click on a box to change the status of a ticket</p>
            </div>

            <div class="row">

                @{ int i = 0; }
                @if (ViewData["Tickets"] != null)
                {
                    @foreach (var ticket in (List<SupportTicketViewModel>)ViewData["Tickets"])
                    {
                        if (ticket.Status == "Available")
                        {
                            <form method="post" action="CheckTicket" role="form" id="form+@i">
                                <div class="col-lg-4" style="margin-bottom:5px">
                                    <div class="boxstyler" id="box'@i'" onClick="document.getElementById('form+'+@i).submit()">
                                        <span>@Html.DisplayFor(x => ticket.Subject)</span>
                                        <h4>Name: @Html.DisplayFor(x => ticket.Name)</h4>
                                        <h4>Email: @Html.DisplayFor(x => ticket.Email)</h4>
                                        <p>@Html.DisplayFor(x => ticket.Message)</p>
                                        <i style="color:#4BB543;font-size:12px" onclick="document.getElementById('form+'+@i).submit()">
                                            @Html.DisplayFor(x => ticket.Status)
                                        </i>
                                    </div>
                                </div>
                                <input type="hidden" name="Id" value="@Html.DisplayFor(x => ticket.Id)" />
                                @{i++;}
                            </form>
                        }
                        else
                        {
                            <form method="post" action="RemoveTicket" role="form" id="form+@i">
                                <div class="col-lg-4" style="margin-bottom:5px">
                                    <div class="boxstyler" id="box'@i'" onClick="document.getElementById('form+'+@i).submit()">
                                        <span>@Html.DisplayFor(x => ticket.Subject)</span>
                                        <h4>Name: @Html.DisplayFor(x => ticket.Name)</h4>
                                        <h4>Email: @Html.DisplayFor(x => ticket.Email)</h4>
                                        <p>@Html.DisplayFor(x => ticket.Message)</p>
                                        <i style="color:#CAE4F1;font-size:12px" onclick="document.getElementById('form+'+@i).submit()">
                                            @Html.DisplayFor(x => ticket.Status)
                                        </i>
                                    </div>
                                </div>
                                <input type="hidden" name="Id" value="@Html.DisplayFor(x => ticket.Id)" />
                                @{i++;}
                            </form>
                        }
                    }
                }
                else if (ViewData["Tickets"] == null)
                {
                    <p>No tickets.</p>
                }

            </div>

        </div>
    </section><!-- End Check Ticket Section -->

    <div id="preloader"></div>
    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>
    <!-- Vendor JS Files -->
    <script src="~/Content/vendor/aos/aos.js"></script>
    <script src="~/Content/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="~/Content/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="~/Content/vendor/php-email-form/validate.js"></script>
    <script src="~/Content/vendor/swiper/swiper-bundle.min.js"></script>

    <!-- Template Main JS File -->
    <script src="~/Content/js/main.js"></script>
</body>
</html>
