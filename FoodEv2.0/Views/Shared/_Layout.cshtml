@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewData["Title"] - FoodEv2._0</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport"/>

    <title>Restaurantly Bootstrap Template - Index</title>
    <meta content="" name="description">
    <meta content="" name="keywords">
    <!-- Favicons -->
    <link href="~/Content/img/favicon.png" rel="icon">
    <link href="~/Content/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Playfair+Display:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500;1,600;1,700|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/Content/vendor/animate.css/animate.min.css" rel="stylesheet" />
    <link href="~/Content/vendor/aos/aos.css" rel="stylesheet">
    <link href="~/Content/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/Content/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/Content/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="~/Content/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

    <!-- Template Main CSS File -->
    <link href="~/Content/css/style.css" rel="stylesheet">
</head>
<body>
    <!-- Vendor JS Files -->
    <script src="~/Content/vendor/aos/aos.js"></script>
    <script src="~/Content/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="~/Content/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="~/Content/vendor/php-email-form/validate.js"></script>
    <script src="~/Content/vendor/swiper/swiper-bundle.min.js"></script>

    <!-- Template Main JS File -->
    <script src="~/Content/js/main.js"></script>

    <!-- ======= Top Bar ======= -->
    <div id="topbar" class="d-flex align-items-center fixed-top">
        <div class="container d-flex justify-content-center justify-content-md-between">

            <div class="contact-info d-flex align-items-center">
                <i class="bi bi-phone d-flex align-items-center"><span>+603 8996 1000</span></i>
                <i class="bi bi-clock d-flex align-items-center ms-4"><span> Mon-Sat: 8:30AM - 8:30PM</span></i>
            </div>
            @if (HttpContextAccessor.HttpContext.Session.GetInt32("uAuth") == null || HttpContextAccessor.HttpContext.Session.GetInt32("uAuth") == 3)
            {
                <div class="languages d-none d-md-flex align-items-center">
                    <ul>
                        <li><a asp-area="" asp-controller="Home" asp-action="Login">Login</a></li>
                        <li><a asp-area="" asp-controller="Home" asp-action="Register">Register</a></li>
                    </ul>
                </div>
            }
            else
            {
                <div class="languages d-none d-md-flex align-items-center">
                    <ul>
                        <li><a asp-area="" asp-controller="Home" asp-action="ProfileManagement">@HttpContextAccessor.HttpContext.Session.GetString("uName")</a></li>
                        <li><a asp-area="" asp-controller="Home" asp-action="Logout">Logout</a></li>
                    </ul>
                </div>
            }

        </div>
    </div>

    <!-- ======= Header ======= -->
    <header id="header" class="fixed-top d-flex align-items-cente">
        <div class="container-fluid container-xl d-flex align-items-center justify-content-lg-between">

            <h1 class="logo me-auto me-lg-0"><a asp-area="" asp-controller="Home" asp-action="Index">FoodE</a></h1>
            <!-- image logo -->
            <!-- <a href="index.html" class="logo me-auto me-lg-0"><img src="assets/img/logo.png" alt="" class="img-fluid"></a>-->

            <nav id="navbar" class="navbar order-last order-lg-0">
                @if (HttpContextAccessor.HttpContext.Session.GetInt32("uAuth") == null || HttpContextAccessor.HttpContext.Session.GetInt32("uAuth") == 3)
                {
                    <ul>
                        <li><a class="nav-link scrollto" asp-area="" asp-controller="Home" asp-action="RoomLobby">Rooms</a></li>
                        <li><a class="nav-link scrollto" asp-area="" asp-controller="Home" asp-action="ContactUs">Contact Us</a></li>
                        <li><a class="nav-link scrollto" asp-area="" asp-controller="Home" asp-action="Tips">Tips</a></li>
                    </ul>
                }
                else if (HttpContextAccessor.HttpContext.Session.GetInt32("uAuth") == 2)
                {
                    <ul>
                        <li><a class="nav-link scrollto" asp-area="" asp-controller="Home" asp-action="RoomLobby">Rooms</a></li>
                        <li><a class="nav-link scrollto" asp-area="" asp-controller="Home" asp-action="ProfileManagement">Profile Management</a></li>
                        <li><a class="nav-link scrollto" asp-area="" asp-controller="Home" asp-action="ContactUs">Contact Us</a></li>
                        <li><a class="nav-link scrollto" asp-area="" asp-controller="Home" asp-action="SurveyRedirector">Survey</a></li>
                        <li><a class="nav-link scrollto" asp-area="" asp-controller="Home" asp-action="Tips">Tips</a></li>
                    </ul>
                }
                else if (HttpContextAccessor.HttpContext.Session.GetInt32("uAuth") == 1)
                {
                    <ul>
                        <li><a class="nav-link scrollto" asp-area="" asp-controller="Home" asp-action="RoomLobby">Rooms</a></li>
                        <li><a class="nav-link scrollto" asp-area="" asp-controller="Home" asp-action="ProfileManagement">Profile Management</a></li>
                        <li><a class="nav-link scrollto" asp-area="" asp-controller="Home" asp-action="CustomerProfileManagement">Customer Profile Management</a></li>
                        <li><a class="nav-link scrollto" asp-area="" asp-controller="Home" asp-action="Register">Register</a></li>
                        <li><a class="nav-link scrollto" asp-area="" asp-controller="Home" asp-action="CheckTicket">Support Tickets</a></li>
                        <li><a class="nav-link scrollto" asp-area="" asp-controller="Home" asp-action="SurveyAdmin">Survey</a></li>
                        <li><a class="nav-link scrollto" asp-area="" asp-controller="Home" asp-action="TipsAdmin">Tips</a></li>
                    </ul>
                }

                <i class="bi bi-list mobile-nav-toggle"></i>
            </nav><!-- .navbar -->
            <a  asp-area="" asp-controller="Home" asp-action="SurveyResult" class="book-a-table-btn scrollto d-none d-lg-flex">Your Survey</a>

        </div>
    </header><!-- End Header -->
    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- ======= Footer ======= -->
    <footer id="footer">
        <div class="footer-top">
            <div class="container">
                <div class="row">

                    <div class="col-lg-3 col-md-6">
                        <div class="footer-info">
                            <h3>FoodE</h3>
                            <p>
                                Technology Park Malaysia<br>
                                57000 Kuala Lumpur, Federal Territory of Kuala Lumpur<br><br>
                                <strong>Phone:</strong> +603 8996 1000<br>
                                <strong>Email:</strong> info@apu.edu.my<br>
                            </p>
                            <div class="social-links mt-3">
                                <a href="https://twitter.com/BryenVoo" class="twitter"><i class="bx bxl-twitter"></i></a>
                                <a href="https://www.facebook.com/bryen.voo/" class="facebook"><i class="bx bxl-facebook"></i></a>
                                <a href="https://www.instagram.com/bryen.voo/?hl=en" class="instagram"><i class="bx bxl-instagram"></i></a>
                                <a href="https://www.linkedin.com/in/bryen-voo-96a396171/" class="linkedin"><i class="bx bxl-linkedin"></i></a>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-6 footer-newsletter">
                        <h4>About FoodE</h4>
                        <p>FoodE is a website developed entirely and purely for the developers FYP</p>
                        <p>As of 2021 the developer is current on his last year of university and facing his FYP</p>
                        <p>This Website is purely so that the developer can pass his FYP and is not meant to be used by the public</p>
                        <p>The exception being testers</p>
                    </div>

                </div>
            </div>
        </div>

        <div class="container">
            <div class="copyright">
                &copy; Copyright <strong><span>FoodE</span></strong>. All Rights Reserved
            </div>
            <div class="credits">
                Designed by <a href="https://www.instagram.com/bryen.voo/?hl=en">Bryen Voo Ka Vun</a>
            </div>
        </div>
    </footer><!-- End Footer -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
